@using Microsoft.AspNet.Identity
<section class="sidebar">
    <div class="user-info">
        <img src="~/Content/themes/images/no-user.png" alt="">
        <h3>@User.Identity.GetUserName()</h3>
    </div>
    <div class="dashboard">
        @if (User.IsInRole("Adminstrator"))
        {
            <a href="@Url.Action("Index", "Category")">
                <i class="fas fa-copyright"></i><span>Categories</span>
            </a>
            <a href="@Url.Action("Index", "Product")">
                <i class="fab fa-product-hunt"></i><span>Products</span>
            </a>
            <a href="@Url.Action("Index", "Slider")">
                <i class="fas fa-sliders-h"></i><span>Slider</span>
            </a>
            <a href="@Url.Action("Index", "ProductDiscount")">
                <i class="fas fa-percent"></i><span>Product Discount</span>
            </a>
            <a href="@Url.Action("Order", "Order")">
                <i class="fab fa-first-order-alt"></i><span>Orders</span>
            </a>
            <a href="@Url.Action("Users", "Admin")">
                <i class="fas fa-users"></i><span>Users</span>
            </a>
            <a href="@Url.Action("Roles", "Admin")">
                <i class="fas fa-registered"></i><span>Roles</span>
            </a>
        }
     
        <a href="@Url.Action("UserOrdersDetails", "Order")">
            <i class="fab fa-first-order"></i><span>User Orders</span>
        </a>
        <a href="@Url.Action("ChangePassword", "Admin")">
            <i class="fas fa-lock"></i><span>Change Password</span>
        </a>
        <a href="@Url.Action("AddPhoneNumber", "Admin")">
            <i class="fas fa-phone-alt"></i><span>Add or Change Phone</span>
        </a>
        <a href="@Url.Action("ManageTwoFactor", "Admin")">
            <i class="">
                <img style="width: 20px; height: 20px" src="~/download.png" alt="Alternate Text"/>
            </i>
            <span>Manage Two Factor</span>
        </a>

    </div>
</section>
