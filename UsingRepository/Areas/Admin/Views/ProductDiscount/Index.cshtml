@model IEnumerable<UsingRepository.Core.Models.ProductDiscount>

@{
    ViewBag.Title = "Index";
}

<h2 class="alert alert-info">Product Discount</h2>

<p>
    @Html.ActionLink("Create New", "Create",null,new {@class="btn btn-Black"})
</p>
<table id="productsDiscountTable" class="table table-bordered table-hover table-responsive">
    <thead><tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discount)
        </th>
        <th>Operations</th>
    </tr>
    </thead><tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discount) %
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                    <input type="submit" class="btn btn-danger js-Delete" value="Delete" data-id="@item.Id" />

                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#productsDiscountTable").dataTable();
            DeleteController.init('/api/ProductDiscount/');
        });
    </script>

}
