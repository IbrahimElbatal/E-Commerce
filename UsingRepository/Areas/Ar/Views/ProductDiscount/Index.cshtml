@model IEnumerable<UsingRepository.Core.Models.ProductDiscount>

@{
    ViewBag.Title = "Index";
}

<h2 class="alert alert-info">كل خصومات المنتجات</h2>

<p>
    @Html.ActionLink("خصم جديد", "Create",null,new {@class="btn btn-Black"})
</p>
<table id="productsDiscountTable" class="table table-bordered table-hover table-responsive">
    <thead><tr>
        <th>
            @* @Html.DisplayNameFor(model => model.Product.Name) *@
            المنتج
        </th>
        <th>
            @* @Html.DisplayNameFor(model => model.Discount) *@
            الخصم
        </th>
        <th></th>
    </tr>
    </thead><tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discount) %
                </td>
                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                    <input type="submit" class="btn btn-danger js-Delete" value="حذف" data-id="@item.Id" />

                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#productsDiscountTable").dataTable();
            DeleteController.init('/api/ProductDiscount/');
        });
    </script>

}
