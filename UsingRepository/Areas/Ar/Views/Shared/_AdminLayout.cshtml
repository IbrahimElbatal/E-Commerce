<!DOCTYPE html>

<html lang="ar" dir="rtl">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="~/Areas/Ar/css/style2.css">
</head>
<body>
<input type="checkbox" id="check-bar">
<header class="header">
    <nav class="navbar">
        <div class="nav-right">
            <h2>الأ<span>دمن</span></h2>               
            <label for="check-bar">
                <i class="fas fa-bars"></i>
            </label>
        </div>
        <div class="nav-left">
            @using (Html.BeginForm("Logout","Admin",FormMethod.Post))
            {
            <button type="submit">خروج</button>
            }

            @{
                var controller = @Url.RouteCollection.GetRouteData(Context)?.Values["controller"].ToString();
                var action = @Url.RouteCollection.GetRouteData(Context)?.Values["action"].ToString();
            }
            <a href="@Url.Action(action, controller, new {area = "admin"})">EN</a>
        </div>
    </nav>
</header>

<main class="main">
    @{ Html.RenderPartial("_sidebar");}
    <section class="site-content">
        @RenderBody()
    </section>
</main>
@Scripts.Render("~/bundles/lib")
@Scripts.Render("~/bundles/app")
@RenderSection("scripts", false)
</body>
</html>
