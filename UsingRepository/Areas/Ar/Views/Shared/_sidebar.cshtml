<section class="sidebar">
    <div class="user-info">
        <img src="~/Content/themes/images/no-user.png" alt="">
        <h3>@User.Identity.Name</h3>
    </div>
    <div class="dashboard">
        @if (User.IsInRole("Adminstrator"))
        {
            <a href="@Url.Action("Index", "Category")">
                <i class="fas fa-copyright"></i><span>الأصناف</span>
            </a>
            <a href="@Url.Action("Index", "Product")">
                <i class="fab fa-product-hunt"></i><span>المنتجات</span>
            </a>
            <a href="@Url.Action("Index", "Slider")">
                <i class="fas fa-sliders-h"></i><span>السلايدر</span>
            </a>
            <a href="@Url.Action("Index", "ProductDiscount")">
                <i class="fas fa-percent"></i><span>المنتجات ذات خصم</span>
            </a>
            <a href="@Url.Action("Order", "Order")">
                <i class="fab fa-first-order-alt"></i><span>الأوردرات</span>
            </a>
            <a href="@Url.Action("Users", "Admin")">
                <i class="fas fa-users"></i><span>المستخدمين</span>
            </a>
            <a href="@Url.Action("Roles", "Admin")">
                <i class="fas fa-registered"></i><span>الصلاحيات</span>
            </a>
        }
        <a href="@Url.Action("UserOrdersDetails", "Order")">
            <i class="fab fa-first-order"></i><span>أوردرات العميل</span>
        </a>
        <a href="@Url.Action("ChangePassword", "Admin")">
            <i class="fas fa-lock"></i><span>تغير الباسورد</span>
        </a>
        <a href="@Url.Action("AddPhoneNumber", "Admin")">
            <i class="fas fa-phone-alt"></i><span>إضافة أو تغير الموبيل</span>
        </a>
        <a href="@Url.Action("ManageTwoFactor", "Admin")">
            <i class="">
                <img style="width: 20px; height: 20px" src="~/download.png" alt="Alternate Text"/>
            </i>
            <span>ادارة المصادقة الثنائية</span>
        </a>
    </div>
</section>
