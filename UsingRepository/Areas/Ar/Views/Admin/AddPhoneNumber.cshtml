@model UsingRepository.Areas.ViewModels.AddPhoneNumberViewModel

@{
    ViewData["Title"] = "Phone Number";
}

<h2 class="alert alert-info">إضافة او تغيير رفم الموبيل</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true,"",new{@class="text-danger"})
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Number)
        @Html.TextBoxFor(m => m.Number, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Number, "", new { @class = "text-danger" })
    </div>
    
    <button class="btn btn-Black">إضافة</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/Jqueryval");
}
