<form method="post">
    <div class="col-xs-6">
        <h4>Your Personal Details</h4>
        <div class="form-group">
            <label class="control-label">First Name</label>
            <input id="firstName" type="text" placeholder="" class="form-control">
        </div>
        <div class="form-group">
            <label class="control-label">Last Name</label>
            <input id="lastName" type="text" placeholder="" class="form-control">
        </div>
        <div class="form-group">
            <label class="control-label">Fax</label>
            <input id="fax" type="text" placeholder="" class="form-control">
        </div>
        <div class="form-group">
            <input id="btnSaveUserDetails" type="submit" value="Save" class="btn btn-Black">
        </div>
    </div>
    <div class="col-xs-6">
        <h1>
            <strong>Your Address</strong>
        </h1>
        <div class="form-group">
            <label class="control-label"><span class="">*</span> Address :</label>
            <input id="address" type="text" placeholder="" class="form-control">
        </div>
        <div class="form-group">
            <label class="control-label"><span class="">*</span> Post Code:</label>
            <input id="postCode" type="text" placeholder="" class="form-control">
        </div>
        <div class="form-group">
            <label class="control-label"><span class="">*</span> Country:</label>
            <select id="ddlCountry" class="form-control">
                <option value="-1">Select Country</option>
            </select>
        </div>
        <div class="form-group">
            <label class="control-label"><span class="">*</span> City:</label>
            <select id="ddlCity" class="form-control">
                <option value="-1">Select City</option>
            </select>
        </div>
    </div>
</form>