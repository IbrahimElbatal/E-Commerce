@model UsingRepository.Core.ViewModels.IdentityViewModels.RegisterViewModel

@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Register</title>
    <link rel="icon" type="image/x-icon" href="@Url.Content("~/favicon.png")" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Login.css" rel="stylesheet" />


</head>
<body>
    <main>
        <div class="wrapper">
            <div class="login">
                <div class="log-left">  
                    <img src="~/banner-image.png" alt="Alternate Text" />  
                </div>  
                <div class="log-right">
                    <h2>Register</h2>

                    @using (Html.BeginForm("Register", "Account", new {ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                        <div class="">
                            @Html.TextBoxFor(m => m.UserName, new {placeholder = "UserName"})
                            @Html.ValidationMessageFor(m => m.UserName, "", new {@class = "text-danger"})
                            <span id="userNameError" class="text-danger"></span>
                        </div>
                        <div class="">
                            @Html.TextBoxFor(m => m.Email, new {placeholder = "Email"})
                            @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
                            <span id="emailError" class="text-danger"></span>
                        </div>
                        <div class="">
                            @Html.PasswordFor(m => m.Password, new {placeholder = "Password"})
                            @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
                        </div>
                        <div class="">
                            @Html.PasswordFor(m => m.ConfirmPassword, new {placeholder = "Confirm Password"})
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new {@class = "text-danger"})
                        </div>

                        <button type="submit">Register</button>
                    }

                </div>
            </div>
        </div>
    </main>
    @Scripts.Render("~/bundles/lib")
    @Scripts.Render("~/bundles/app")
    @Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript">
    $(document).ready(function () {

        UserController(UserService).init('UserName', 'userNameError');
        UserController(UserService).init('Email', 'emailError');
    });
</script>
</body>
</html>
