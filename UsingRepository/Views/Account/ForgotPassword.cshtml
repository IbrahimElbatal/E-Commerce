@model UsingRepository.Core.ViewModels.IdentityViewModels.ForgotPasswordViewModel
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Forget Password</title>
    <link rel="icon" type="image/x-icon" href="@Url.Content("~/favicon.png")" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Login.css" rel="stylesheet" />
</head>
<body>
    <main>
        <div class="wrapper">
            <div class="login">
                <div class="log-right" style="width:100%">
                    <h2>Forget Password</h2>

                    @using (Html.BeginForm("ForgotPassword", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="">
                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            <span id="emailError" class="text-danger"></span>
                        </div>
                        <button type="submit">Email Link</button>
                    }

                </div>
            </div>
        </div>
    </main>
    @Scripts.Render("~/bundles/lib")
    @Scripts.Render("~/bundles/app")
@Scripts.Render("~/bundles/jqueryval")
</body>
</html>
